<MudRadioGroup @bind-SelectedValue="SelectedSheet"
               Class="d-flex flex-wrap gap-3"
               T="string"
               ValueChanged="OnSelectedChanged">
    @{
        if (SheetNames?.Any() == true)
        {
            foreach (var sheet in SheetNames)
            {
                <MudRadio T="@(string)"
                          Value="@(sheet)">
                    @(sheet)
                </MudRadio>
            }
        }
    }
</MudRadioGroup>